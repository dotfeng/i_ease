<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:background="@color/list_back"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp" >
    <FrameLayout
        android:id="@+id/layout_head_pic"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp" >

        <View
            android:id="@+id/myview_bottom"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/comments_userimgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/shifan" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bubble" >

        <TextView
            android:id="@+id/comments_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="大王带我来巡山"
            android:textColor="@color/main" />

        <TextView
            android:id="@+id/comments_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/comments_username"
            android:layout_below="@id/comments_username"
            android:text="自行车是什么样的额？" />

        <TextView
            android:id="@+id/lou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/comments_content"
            android:layout_alignParentRight="true"
            android:text="1#" />
    </RelativeLayout>

</LinearLayout>