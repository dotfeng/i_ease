<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cata_listitem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/cata_img"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cata_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="可折叠式过山车"
            android:textColor="@color/main"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cata_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sunny"
                android:textColor="@color/yin"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/cata_renzheng"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="管理学院(学号认证)"
                android:textColor="@color/school_name"
                android:textSize="@dimen/textsize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/place_price_left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/dingwei" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="本校"
                android:textColor="@color/school_name"
                android:textSize="@dimen/textsize" />

            <TextView
                android:id="@+id/cata_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:text="$100"
                android:textColor="#FF0000" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>