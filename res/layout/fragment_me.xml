<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_back"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/userinfo"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@color/green"
        android:gravity="center"
        android:orientation="vertical" >

        <!--
             <ImageView
            android:id="@+id/seting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile_btn_settings" />
        -->

        <ImageView
            android:id="@+id/userimg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/home_icon_userlogin" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="sunny白叶"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="手机:18065982281"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="email:948302376@qq.com"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/noresult"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@color/green"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亲，你还没有登录哦！"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="立即登陆"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/relativelayout_line"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_collections"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_my_collections" />

            <TextView
                android:id="@+id/number_shoucang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/left"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/left"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/left"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/left"
                android:text="已收藏" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/yin" />

        <RelativeLayout
            android:id="@+id/rl_published"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <ImageView
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_mygoods_show" />

            <TextView
                android:id="@+id/number_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/right"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/right"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/right"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/right"
                android:text="已发布" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/change_password"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/about_me_btn_back"
        android:text="修改密码"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/change_userimg"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/about_me_btn_back"
        android:text="更改头像"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/change_school"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/about_me_btn_back"
        android:text="切换学校"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/loginout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/about_me_btn_back"
        android:text="退出登录"
        android:textColor="@color/white" />

</LinearLayout>